<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="45dp"
	android:background="@drawable/selector_category_bg"
	android:orientation="vertical">
	
	<TextView
		android:id="@+id/category_tv_chapter"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerVertical="true"
		android:drawableLeft="@drawable/selector_category_unload"
		android:drawablePadding="10dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:maxLines="1"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:text="1.第一章 八十大寿"
		android:textColor="@color/selector_chapter"
		android:textSize="16sp" />
	
	
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/nb.divider.narrow" />
</RelativeLayout>