<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.richard.novel.view.main.activity.MainActivity">

    <com.richard.novel.widget.NoManyScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">
    </com.richard.novel.widget.NoManyScrollViewPager>

    <com.lhh.apst.library.AdvancedPagerSlidingTabStrip
        android:id="@+id/tab_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/home_tab_style"
        android:elevation="15dp"
        android:layout_alignParentBottom="true"
        android:fillViewport="false"/>

</RelativeLayout>
