<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_red_packge"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
        android:orientation="vertical">


    <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:padding="15dp"
            android:hint="说点啥..."
            android:gravity="top"
            android:background="@drawable/bg_round_white_card"
            android:textColor="@color/txt_middle_grey"
            android:textColorHint="@color/txt_light_grey"/>

    <ImageView
            android:id="@+id/iv_send"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="14dp"
            android:background="@drawable/bg_round_button_white"
            android:elevation="5dp"
            android:src="@mipmap/icon_send"/>

</LinearLayout>

