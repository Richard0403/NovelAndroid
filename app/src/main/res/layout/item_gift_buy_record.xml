<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_round_stroke_theme">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_header"
            android:text="礼物名字"
            android:maxLines="1"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:textColor="@color/txt_yellow"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_deliver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Richard"
            android:layout_toRightOf="@id/iv_header"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="5dp"
            android:textColor="@color/txt_deep"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_deliver_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18010473224"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@id/tv_deliver_name"
            android:layout_alignTop="@id/tv_deliver_name"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/tv_deliver_name"
            android:textColor="@color/txt_middle_grey"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_deliver_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:layout_below="@id/tv_deliver_name"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_header"
            android:textColor="@color/txt_light_grey"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写收货地址"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/txt_deep"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>