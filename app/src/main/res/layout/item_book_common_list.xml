<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="11dp">


    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="71dp"
        android:layout_height="98dp"
        android:scaleType="fitXY"
        android:elevation="5dp"
        android:src="@mipmap/icon_book_default" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_pic"
        android:layout_marginLeft="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="她世纪"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/tv_read_num"
                android:layout_marginRight="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textColor="@color/txt_deep"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_read_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0人在读"
                android:visibility="invisible"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/txt_light_grey"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="维多利亚·希斯洛普（Victoria Hislop）"
            android:textColor="@color/txt_deep"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/tv_book_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="《岛》是英国作家维多利亚·希斯洛普（Victoria Hislop）第一部长篇小说，发表于2005年。《岛》讲述了希腊克里特岛上以佩特基斯家族为代表和......"
            android:textColor="@color/txt_light_grey"
            android:textSize="10dp" />
    </LinearLayout>


</RelativeLayout>